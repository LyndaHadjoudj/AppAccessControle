<%- include('./layouts/header1') %>
    <br />
    <h1 style="margin-left: 40%;">Liste des affaires</h1>
    <% affaires.forEach(affaire=> {
        if(affaire.juge == juge.name + " " + juge.prenom){%>

        <div class="mes-affaires">
            <div class="box">

                <h3 style="display:inline;">Affaire numéro :</h3>

                <%= affaire.codeAff %>


                    <br /> <br />
                    <h3 style="display:inline;">Titre de l'affaire : </h3>
                    <%= affaire.titleAff %>
                        <br><br>
                        <h3 style="display:inline;">Date de dépot d'affaire : </h3>
                        <%= affaire.date.toLocaleDateString() %>

                            <br />
                            <a href="/juge/affairejuge/detailJu/<%= affaire._id %>"><button>Afficher détail de
                                    l'affaire</button></a>

                            <form action="/juge/afficher/<%= affaire._id %>" method="post" style="display:inline;">
                                <p style="display:inline;margin-left: 200px;">autoriser de voir la décision</p>
                                <button>OUI</button>
                            </form>


            </div>

        </div>
        <% }}) %>

            <%- include('./layouts/footer') %>